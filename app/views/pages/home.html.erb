<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2016/11/19/15/50/chair-1840011_1280.jpg);">
  <div class="container">
    <h1 class="text-center">Rent your beautiful chair with <strong>ChairBnB</strong></h1>
      <%= simple_form_for :search, url: chairs_path, method: :get do |f| %>
          <div class="desktop-search-bar">
            <div class="form-row bg-white d-flex rounded-pill py-2 pl-1 mt-2 form-bg">
              <div class="col-3">
                <%= f.input :location, input_html: {type: "text", class: "form-control input-border", placeholder: "Location"}, label: false %>
                <!-- <input type="text" class="form-control input-border" placeholder="Location"> -->
              </div>
                <div class="col-3">
                  <input type="date" class="form-control input-border" placeholder="chech-in">
                </div>
                <div class="col-3">
                  <input type="date" class="form-control input-border" placeholder="check-out">
                </div>
                <div class="col-lg-2">
                  <input type="integer" class="form-control border-0" placeholder="How many chairs?">
                </div>
                <div class="col-1 pl-3">
                  <!-- <button name="search" type="submit" class="btn custom-button rounded-circle"><i class="fas fa-search fa-search-icon"></i></button> -->
                 <%= f.button :submit, class: "btn custom-button rounded-circle" do %>
                  <i class="fas fa-search fa-search-icon"></i>
                 <% end %>
              </div>
            </div>
          </div>
      <% end %>
  </div>
  <div class="container mobile-search-bar">
    <form action="/chairs" class="desktop-search">
            <div class="form-row bg-white d-flex rounded-pill py-2 pl-1 mt-2 form-bg">
              <div class="col-9">
                <input type="text" class="form-control input-border" placeholder="Location">
              </div>
              <div class="col-3 pl-3">
                <!-- <button name="search" type="submit" class="btn custom-button rounded-circle"><i class="fas fa-search fa-search-icon"></i></button> -->
                 <%= link_to "", chairs_path, class: "fas fa-search fa-search-icon btn custom-button mx-1"  %>
              </div>
            </div>
          </form>
  </div>


</div>

<div class="container mt-5">
  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn.pixabay.com/photo/2017/03/28/12/11/chairs-2181960__340.jpg)">
      Office Chairs
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn.pixabay.com/photo/2016/11/23/17/56/beach-1854076_960_720.jpg)">
      Party Chairs
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn.pixabay.com/photo/2017/03/25/23/32/kitchen-2174593__340.jpg)">
      Home Chairs
    </div>
  </div>
</div>



