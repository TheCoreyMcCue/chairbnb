
<div class="container mt-4 px-0">
  <div id="back-sign">
    <%= link_to(chairs_path) do %>
      <i class="fas fa-chevron-circle-left">
      </i>
    <% end %>
  </div>
</div>

<div class="container card-container mt-3 d-flex flex-column align-items-start justify-content-center">
  <div class="d-flex justify-content-between w-100 mb-4">
    <h1 class="font-weight-bold ml-3 mb-0" id="show-head"> <%= @chair.name.capitalize %>
    </h1>
    <div class="d-flex">
      <% if policy(@chair).update? %>
        <div class="mx-2">
          <%= link_to(edit_chair_path(@chair)) do %>
            <i class="far fa-edit">
            </i>
          <% end %>
        </div>
      <% end %>
      <% if policy(@chair).destroy? %>
        <div>
          <%= link_to(@chair, method: :delete, data: { confirm: 'Are you sure?' }) do %>
            <i class="far fa-trash-alt">
            </i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex card-content align-items-start">
    <div class="image-wrapper">
        <%= cl_image_tag @chair.photo.key, crop: :fill, class: "show-pic" %>
    </div>

    <div class="content-wrapper mx-4">
      <h3>About this Chair:
      </h3>
      <p>
        <%= @chair.description %>
      </p>
      <p>
        Location:<%= @chair.location %>
      </p>
      <p class="price-style-show-page">Price: <%= @chair.price %> â‚¬
      </p>
    </div>

    <div class="form-wrapper">
      <div class="check-availabity">
        <%= simple_form_for ([@chair, @reservations]) do |f| %>
          <div class="form-row">
            <div class="col-6">
              <%= f.input :start_date, as: :date %>
            </div>
            <div class="col-6">
              <%= f.input :end_date, as: :date %>
            </div>
            <div class="col-lg-12 mt-2">
              <%= f.input :total_price, disabled: true %>
            </div>
            <div class="col-12 mt-2">
              <%= f.submit "Book Now", class:"btn btn-primary w-100" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>






