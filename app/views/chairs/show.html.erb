<div class="container show-bg mt-3 pt-5">
  <h1 class="font-weight-bold ml-3" id="show-head"> <%= @chair.name.capitalize %> </h1>
  <div class="show-flex-layout">
    <div class="child1">
    <div class="img mx-3 mb-3"> <%= cl_image_tag @chair.photo.key, height: 300, width: 300, crop: :fill, class: "show-pic" %> </div>
  </div>

  <div class="child2 ml-5 mr-3">
    <h3>About this Chair: </h3> <p> <%= @chair.description %> </p>
    <p>Location: <%= @chair.location %> </p>
    <p class="price-style-show-page">Price: <%= @chair.price %> â‚¬</p>
  </div>

  <div class="child3 ml-2 mr-3">
    <div class="check-availabity">
      <%= simple_form_for ([@chair, @reservations]) do |f| %>
        <div class="form-row">
          <div class="col-6">
            <%= f.input :start_date, as: :date %>
          </div>
          <div class="col-6">
            <%= f.input :end_date, as: :date %>
          </div>
          <div class="col-lg-12 mt-2">
            <%= f.input :total_price, disabled: true %>
          </div>
          <div class="col-12 mt-2">
            <%= f.submit "Book Now", class:"btn btn-primary w-100" %>
          </div>
      <% end %>
        </div>
    </div>
  </div>
  </div>

  <div class="actions d-flex justify-content-center">
    <div id="back-sign">
      <%= link_to(chairs_path) do %>
        <i class="fas fa-chevron-circle-left"></i>
      <% end %>
    </div>
    <% if policy(@chair).update? %>
      <div class="mx-2">
        <%= link_to(edit_chair_path(@chair)) do %>
          <i class="far fa-edit"></i>
        <% end %>
      </div>
    <% end %>
    <% if policy(@chair).destroy? %>
      <div >
        <%= link_to(@chair, method: :delete, data: { confirm: 'Are you sure?' }) do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>






