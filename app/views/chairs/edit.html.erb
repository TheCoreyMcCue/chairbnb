<div class="edit-page">
  <div class="container d-flex justify-content-center">
    <div class="col-6">
      <h1>Edit Your Chair</h1>

      <%= render 'form', chair: @chair %>

      <%= link_to 'Chair Details', @chair, class: "btn btn-info mt-2" %> |
      <%= link_to 'Back to all chairs', chairs_path, class: "btn btn-warning mt-2" %>
      <%= link_to 'Destroy', @chair, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-2" %>
    </div>
  </div>
</div>
